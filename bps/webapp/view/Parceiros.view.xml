<mvc:View controllerName="fiorinov.bps.controller.Parceiros"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" showHeader="false">
        <content>
            <Table 
                id="partnersTable"
                items="{partnerInfos>/}"
                >
                <headerToolbar>
                    <OverflowToolbar >
                        <Title text="Parceiros ({partnerInfos>/totalCount})"></Title>
                        <ToolbarSpacer />
                        <SearchField liveChange="onSearch" width="15rem"></SearchField>
                        <Button icon="sap-icon://add" press="onAddPartner" tooltip="Adicionar parceiro"></Button>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="ID"/>
                    </Column>
                    <Column>
                        <Text text="Nome"/>
                    </Column>
                    <Column>
                        <Text text="Tipo"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Active" press="onNav">
                        <Text text="{partnerInfos>id}"/>
                        <Text text="{partnerInfos>name}"/>
                        <Text text="{partnerInfos>type}"/>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    icon="sap-icon://excel-attachment"
                    iconFirst="false"
                    text="Exportar excel"
                    press="onExportExcel"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
